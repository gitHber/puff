<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-chevron-left"></i>上一页</a>
    {{/if}}
    <span class="page-number">第 {{page}}页/共{{pages}}页</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">下一页<i class="fa fa-chevron-right"></i></a>
    {{/if}}
</nav>