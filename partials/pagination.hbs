<div class="post-list-pagination">
  <nav class="post-navigation">
    <ul class="nav-links" style="display: flex;justify-content: space-around;">
      <li class="nav-previous {{#unless prev}}invisible{{/unless}}">
        <a href="{{page_url prev}}"><i class="fa fa-angle-left"></i><span>上一页</span></a>
      </li>
      <li><span>第{{page}}页/共{{pages}}页</span></li>
      <li class="nav-next {{#unless next}}invisible{{/unless}}">
        <a href="{{page_url next}}"><span>下一页</span><i class="fa fa-angle-right"></i></a>
      </li>
    </ul>
  </nav>
</div>